{
  "name": "mk-dirs",
  "version": "3.0.0",
  "repository": "lukeed/mk-dirs",
  "description": "A tiny (381B to 419B) utility to make a directory and its parents, recursively",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "types": "index.d.ts",
  "license": "MIT",
  "files": [
    "*.d.ts",
    "dist",
    "sync"
  ],
  "author": {
    "name": "Luke Edwards",
    "email": "luke.edwards05@gmail.com",
    "url": "https://lukeed.com"
  },
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "build": "bundt",
    "pretest": "npm run build",
    "test": "uvu -r esm test"
  },
  "modes": {
    "sync": "src/sync.js",
    "default": "src/async.js"
  },
  "keywords": [
    "mkdir",
    "make dir",
    "recursive",
    "mkdirp"
  ],
  "devDependencies": {
    "bundt": "1.1.0",
    "esm": "3.2.25",
    "premove": "3.0.1",
    "uvu": "0.3.3"
  }
}
